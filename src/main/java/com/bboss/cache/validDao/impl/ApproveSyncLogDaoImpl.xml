<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bboss.cache.validDao.interfaces.IApproveSyncLogDao">
    <resultMap id="BaseResultMap" type="com.bboss.cache.bean.approve.ApproveSyncLog">
        <result column="ID" jdbcType="VARCHAR" property="id"/>
        <result column="TRANS_IDO" jdbcType="VARCHAR" property="transIDO"/>
        <result column="REQ_MSG" jdbcType="VARCHAR" property="reqMsg"/>
        <result column="STATUS" jdbcType="VARCHAR" property="status"/>
        <result column="CREATE_DATE" jdbcType="TIMESTAMP" property="createDate"/>
    </resultMap>

    <sql id="Base_Column_List">
        ID,
        TRANS_IDO,
        REQ_MSG,
        STATUS,
        CREATE_DATE
    </sql>

    <insert id="insert" parameterType="com.bboss.cache.bean.approve.ApproveSyncLog">
        insert into approve_sync_log (<include refid="Base_Column_List"/>)
        values (#{id,jdbcType=VARCHAR}, #{transIDO,jdbcType=VARCHAR}, #{reqMsg,jdbcType=VARCHAR}, #{status,jdbcType=VARCHAR},now())
    </insert>

    <insert id="batchInsert" parameterType="java.util.List" useGeneratedKeys="false">
        insert into approve_sync_log (<include refid="Base_Column_List"/>) values
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{id,jdbcType=VARCHAR}, #{transIDO,jdbcType=VARCHAR}, #{reqMsg,jdbcType=VARCHAR}, #{status,jdbcType=VARCHAR},now()
            )
        </foreach>
    </insert>

    <select id="selectApproveSyncLogByTrans" resultType="com.bboss.cache.bean.approve.ApproveSyncLog">
        select *
        from approve_sync_log
        where TRANS_IDO = #{transIDO,jdbcType=VARCHAR}
        order by CREATE_DATE desc
        limit 1
    </select>

    <select id="selectApproveSyncLogs" resultType="com.bboss.cache.bean.approve.ApproveSyncLog">
        select * from approve_sync_log
        <where>
            <if test="transId !=null and transId !='' ">
                TRANS_IDO = #{transId,jdbcType=VARCHAR}
            </if>
        </where>
        order by CREATE_DATE desc
    </select>

</mapper>
