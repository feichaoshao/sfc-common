<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bboss.cache.validDao.interfaces.IRuleSyncLogDao">
    <resultMap id="BaseResultMap" type="com.bboss.cache.bean.valid.RuleSyncLog">
        <result column="ID" jdbcType="VARCHAR" property="id"/>
        <result column="offer_num" jdbcType="VARCHAR" property="offerNum"/>
        <result column="TRANS_IDO" jdbcType="VARCHAR" property="transIDO"/>
        <result column="REQ_MSG" jdbcType="VARCHAR" property="reqMsg"/>
        <result column="STATUS" jdbcType="VARCHAR" property="status"/>
        <result column="CREATE_DATE" jdbcType="TIMESTAMP" property="createDate"/>
    </resultMap>

    <sql id="Base_Column_List">
        ID,
        offer_num,
        TRANS_IDO,
        REQ_MSG,
        STATUS,
        CREATE_DATE
    </sql>

    <select id="selectList" resultMap="BaseResultMap">
        SELECT * FROM rule_sync_log
        <where>
            <if test="offerNum != null and offerNum != ''">
                AND offer_num = #{offerNum}
            </if>
            <if test="transIDO != null and transIDO != ''">
                AND TRANS_IDO = #{transIDO}
            </if>
        </where>
        ORDER BY CREATE_DATE DESC
    </select>

    <insert id="insert" parameterType="com.bboss.cache.bean.valid.RuleSyncLog">
        insert into rule_sync_log (<include refid="Base_Column_List"/>)
        values (#{id,jdbcType=VARCHAR}, #{offerNum,jdbcType=VARCHAR}, #{transIDO,jdbcType=VARCHAR}, #{reqMsg,jdbcType=VARCHAR}, #{status,jdbcType=VARCHAR},now())
    </insert>

    <insert id="batchInsert" parameterType="java.util.List" useGeneratedKeys="false">
        insert into rule_sync_log (<include refid="Base_Column_List"/>) values
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{id,jdbcType=VARCHAR}, #{offerNum,jdbcType=VARCHAR},#{transIDO,jdbcType=VARCHAR}, #{reqMsg,jdbcType=VARCHAR}, #{status,jdbcType=VARCHAR},now()
            )
        </foreach>
    </insert>

    <select id="selectRuleSyncLogByTrans" resultType="com.bboss.cache.bean.valid.RuleSyncLog">
        select *
        from rule_sync_log
        WHERE 1=1
        <if test="offerNum != null and offerNum != ''">
            AND offer_num = #{offerNum}
        </if>
        <choose>
            <when test="transIdo != null and transIdo != ''">
                AND TRANS_IDO = #{transIdo}
            </when>
            <otherwise>
                ORDER BY CREATE_DATE desc
            </otherwise>
        </choose>
        LIMIT 1
    </select>

    <update id="updateRuleSyncLog" parameterType="com.bboss.cache.bean.valid.RuleSyncLog">
        update rule_sync_log
        set status = #{status}
        where 1 = 1
        <if test="offerNum != null and offerNum != ''">
            AND offer_num = #{offerNum}
        </if>
        <if test="transIDO != null and transIDO != ''">
            AND TRANS_IDO = #{transIDO}
        </if>
    </update>
</mapper>
