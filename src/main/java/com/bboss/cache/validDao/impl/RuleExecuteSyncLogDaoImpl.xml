<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bboss.cache.validDao.interfaces.IRuleExecuteSyncLogDao">
    <resultMap id="BaseResultMap" type="com.bboss.cache.bean.valid.RuleExecuteSyncLog">
        <result column="id" jdbcType="VARCHAR" property="id"/>
        <result column="sync_date" jdbcType="VARCHAR" property="syncDate"/>
        <result column="sync_status" jdbcType="VARCHAR" property="syncStatus"/>
        <result column="sync_req" jdbcType="VARCHAR" property="syncReq"/>
        <result column="sync_resp" jdbcType="VARCHAR" property="syncResp"/>
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate"/>
    </resultMap>

    <sql id="Base_Column_List">
        ID,
        sync_date,
        sync_status,
        sync_resp
    </sql>

    <select id="selectSyncDate" resultType="java.lang.String">
        SELECT sync_date as syncDate FROM rule_execute_sync_log
        order by create_date desc
        limit 1
    </select>

    <insert id="insert" parameterType="com.bboss.cache.bean.valid.RuleExecuteSyncLog">
        insert into rule_execute_sync_log (<include refid="Base_Column_List"/>)
        values (#{id,jdbcType=VARCHAR}, #{syncDate,jdbcType=VARCHAR}, #{syncStatus,jdbcType=VARCHAR}, #{syncResp,jdbcType=VARCHAR})
    </insert>

</mapper>
